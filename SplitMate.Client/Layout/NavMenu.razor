@using Microsoft.Extensions.Localization
@implements IDisposable

@inject NavigationManager NavigationManager

<MudNavMenu>
	<MudNavLink Href="users" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.People">Użytkownicy</MudNavLink>
	<MudNavLink Href="shopping-lists" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Storage">Wszystkie listy</MudNavLink>
	<MudNavLink Href="unsettled-shopping-lists" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ReceiptLong">Nierozliczone listy</MudNavLink>
</MudNavMenu>

@code{
	protected override void OnInitialized()
	{
		NavigationManager.LocationChanged += OnLocationChanged;
	}
	private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
	{
		StateHasChanged();
	}
	public void Dispose()
	{
		NavigationManager.LocationChanged -= OnLocationChanged;
	}
}